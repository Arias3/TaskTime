#:kivy 2.0.0
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton

<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)  # Padding general
        spacing: dp(20)  # Espaciado entre los elementos

        # Espacio vacío para ajuste visual
        Widget:
            size_hint_y: None
            height: dp(50)

        # Imagen de logo en la pantalla de bienvenida
        Image:
            source: 'assets/logo.png'
            size_hint: (0.95, 0.6)
            pos_hint: {'center_x': 0.5}
            fit_mode: 'contain'  # Ajuste de imagen, similar a keep_ratio

        # Título en la pantalla de bienvenida
        MDLabel:
            text: "¡BIENVENIDO A TASKTIME!"
            halign: "center"
            font_style: "H5"
            font_name: "assets/TittleRegular.otf"  # Fuente personalizada
            text_color: 0, 0, 0, 1  # Color del texto (negro)

        # Botón para acceder
        MDRaisedButton:
            text: "Acceder"
            pos_hint: {'center_x': 0.5}
            size_hint: (0.6, None)
            height: dp(48)  # Altura del botón
            md_bg_color: 0.835, 0.506, 0.631, 1  # Color de fondo rosa
            text_color: 1, 1, 1, 1  # Color del texto (blanco)
            on_release: root.go_to_home()  # Acción al presionar el botón

        # Espacio vacío para ajuste visual
        Widget:
            size_hint_y: None
            height: dp(50)

<HomeScreen>:
    FloatLayout:
        # Header (Parte superior de la pantalla)
        BoxLayout:
            orientation: 'horizontal'
            padding: dp(15)
            spacing: dp(15)
            size_hint_y: None
            height: dp(90)  # Altura fija para el header
            pos_hint: {'top': 1}  # Anclado al borde superior

            canvas:
                Color:
                    rgba: 0.831, 0.506, 0.631, 1  # Color de fondo (#d481a1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  # Esquinas redondeadas

            # Logo en el header
            Image:
                source: 'assets/logo2.png'
                size_hint: None, None
                size: dp(70), dp(70)
                pos_hint: {"center_y": 0.5}

            # Título del header
            Label:
                text: "MENÚ"
                font_size: "35sp"
                font_name: "assets/TittleRegular.otf"
                color: 0, 0, 0, 1  # Color del texto (negro)
                valign: "middle"
                halign: "center"

        # Contenedor para los botones
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(15)  # Espaciado entre botones
            size_hint: None, None
            size: dp(250), dp(0.8 * root.height)  # Ancho fijo, altura proporcional al 80% de la pantalla
            pos_hint: {"center_x": 0.55, "top": 1.05}  # Justo debajo del header

            # Primer botón (Calendario)
            MDCard:
                radius: dp(15)
                size_hint: None, None
                size: dp(210), dp(110)
                padding: dp(15)
                ripple_behavior: True
                on_release: print("Calendario presionado")
                md_bg_color: 235 / 255, 208 / 255, 215 / 255, 1  # Color de fondo personalizado

                canvas:
                    Color:
                        rgba: 235 / 255, 208 / 255, 215 / 255, 1  # Color de fondo RGB(235, 208, 215)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                BoxLayout:
                    orientation: "vertical"
                    spacing: dp(10)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    Image:
                        source: 'assets/calendario.png'
                        size_hint: None, None
                        size: dp(82.59), dp(77)  # Tamaño proporcional de la imagen
                        pos_hint: {"center_x": 0.5}

            # Segundo botón (Recordatorios)
            MDCard:
                radius: dp(15)
                size_hint: None, None
                size: dp(210), dp(110)
                padding: dp(15)
                ripple_behavior: True
                on_release: print("Recordatorios presionado")

                canvas:
                    Color:
                        rgba: 235 / 255, 208 / 255, 215 / 255, 1  # Color de fondo RGB(235, 208, 215)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                BoxLayout:
                    orientation: "vertical"
                    spacing: dp(10)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    Image:
                        source: 'assets/recordatorios.png'
                        size_hint: None, None
                        size: dp(82.59), dp(77)
                        pos_hint: {"center_x": 0.5}

            # Tercer botón (Pendientes)
            MDCard:
                radius: dp(15)
                size_hint: None, None
                size: dp(210), dp(110)
                padding: dp(15)
                ripple_behavior: True
                on_release: print("Pendientes presionado")

                canvas:
                    Color:
                        rgba: 235 / 255, 208 / 255, 215 / 255, 1  # Color de fondo RGB(235, 208, 215)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                BoxLayout:
                    orientation: "vertical"
                    spacing: dp(10)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    Image:
                        source: 'assets/pendientes.png'
                        size_hint: None, None
                        size: dp(82.59), dp(77)
                        pos_hint: {"center_x": 0.5}

            # Cuarto botón (Configuración)
            MDCard:
                radius: dp(15)
                size_hint: None, None
                size: dp(210), dp(110)
                padding: dp(15)
                ripple_behavior: True
                on_release: print("Configuración presionado")

                canvas:
                    Color:
                        rgba: 235 / 255, 208 / 255, 215 / 255, 1  # Color de fondo RGB(235, 208, 215)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                BoxLayout:
                    orientation: "vertical"
                    spacing: dp(10)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    Image:
                        source: 'assets/configuracion.png'
                        size_hint: None, None
                        size: dp(82.59), dp(77)
                        pos_hint: {"center_x": 0.5}
